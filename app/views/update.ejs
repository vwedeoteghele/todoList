<%- include('partials/header.ejs') %>
    <main id="main">
        <section id="features" class="features" >
            <div class="container">
      
              <div class="section-title" style="margin-top: 20px !important;">
                <h2>Edit To-do</h2>
                <% for(const todo of OneTodo) { %> 
                <form action="/updateTodo/<%= todo.uniqueId %> " method="post">
                  <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label"> <h4>To-do Description</h4></label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" name="description" rows="1"> <%= todo.description %> </textarea>
                  </div>
                 <% } %> 
                  <button type="submit" class="btn btn-primary">Edit To-do</button>
                </form>
              </div>
      
            </div>
          </section>
        
    </main>
  