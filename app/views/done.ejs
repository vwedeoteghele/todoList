<%- include('partials/header.ejs') %>
    <main id="main">
        <section id="features" class="features" >
            <div class="container">
      
              <div class="section-title" style="margin-top: 20px !important;">
                <h2>MARK AS COMPLETED</h2>
                <h4>Now that you are done, Smash the Complete button as feel a sense of accomplishment</h4>
                <% for(const todo of Onetodo) { %>
                <form action="/done/<%= todo.uniqueId %> " method="POST">
                    <div style="background-color:#2d405f; color: white;">
                      <div class="mb-3 row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Unique Id</label>
                        <div class="col-sm-10" style="font-size: 22px !important;">
                          <input type="text" readonly style="color: white !important;" class="form-control-plaintext" id="staticEmail" name="uniqueID" value="<%= todo.uniqueId  %>">
                        </div>
                      </div>

                      <div class="mb-3 row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Description</label>
                        <div class="col-sm-10" style="font-size: 22px !important;">
                          <input type="text" readonly style="color: white !important;" class="form-control-plaintext" name="description" id="staticEmail" value="<%= todo.description  %>">
                        </div>
                      </div>

                      <div class="mb-3 row">
                        <label for="staticEmail" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10" style="font-size: 22px !important;">
                          <input type="text" readonly style="color: white !important;" class="form-control-plaintext" id="staticEmail" value="Done with this? Please tick the checkbox">
                        </div>
                        <div class="input-group mb-3">
                          <div class="input-group-text">
                            <input class="form-check-input mt-0" type="checkbox" name=status value="" aria-label="Checkbox for following text input" >
                          </div>
                          <input type="text" class="form-control" name=reward aria-label="Text input with checkbox" placeholder="You deserve a chilled glass of champagne for smashing this todo">
                        </div>
                      </div>
                    </div>
                  <% } %>  
                    <input type="submit" class="btn btn-success" value="âœ” Done">
                  </form>
                  <br>
                  <a href="/all" class="btn" style="background-color:#2d405f; color: white;"> &lt;&lt; Back to All Todos</a>

              </div>


            </div>
          </section>
        
    </main>
  