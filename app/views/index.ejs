<%- include('partials/header.ejs') %>
    <main id="main">
        <section id="features" class="features" >
            <div class="container">
      
              <div class="section-title" style="margin-top: 20px !important;">
                <h2>All To-dos</h2>
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Description</th>
                      <th scope="col"></th>
                      <th scope="col"></th>
                      <th scope="col"></th>
                      <th scope="col"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (let index = 0; index < todos.length; index++) { %>
                    <tr>
                      <th scope="row"><%= (index) + 1 %></th>
                      <td><%= todos[index].description  %></td>
                      <td><a href="/view/<%= todos[index].uniqueId %>" class="btn btn-primary">View</a></td>
                      <td><a href="/update/<%= todos[index].uniqueId %>" class="btn btn-dark">Edit</a></td>
                      <td><a href="/delete/<%= todos[index].uniqueId %>" class="btn btn-danger">Delete</a></td>
                      <td><a href="/done/<%= todos[index].uniqueId %>" class="btn btn-success"> Done</a></td>

                    </tr>
                    <% } %> 
                  </tbody>
                </table>
                
              </div>
      
            </div>
          </section>
        
    </main>
    